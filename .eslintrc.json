{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "plugin:react/recommended",
    "standard",
    "prettier/standard",
    "prettier/react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": ["off"],
    "space-before-function-paren": "off",
    "react/react-in-jsx-scope": "off",
    "semi": "off",
    "max-len": ["error", { "code": 120 }],
    "multiline-ternary": "off"
  }
}
